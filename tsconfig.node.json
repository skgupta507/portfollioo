{
	"compilerOptions": {
		"composite": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,

		"paths": {
			"@components/*": ["./src/components/*"],
			"@assets/*": ["./src/assets/*"],
			"@routes.*": ["./src/routes/*"],
			"@data/*": ["./src/data/*"],
      		"@src/*": ["./src/*"],
			"@public/*": ["./public/*"]
		}
	},
	
	"include": ["vite.config.ts"]
}